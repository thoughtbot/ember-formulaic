{{#if submitted}}
  <span id="submitted"></span>
{{/if}}

<form {{action "submit" on="submit"}}>
  <div class="input">
    <label for="text">{{t "form.text"}}</label>
    <input id="text" type="text">
  </div>

  <div class="input">
    <label for="textarea">{{t "form.textarea"}}</label>
    <textarea id="textarea"></textarea>
  </div>

  <div class="input">
    <label for="select">{{t "form.select"}}</label>
    <select id="select">
      <option value="#1">#1</option>
      <option value="#2">#2</option>
    </select>
  </div>

  <div class="input">
    <label for="multi-select">{{t "form.multi-select"}}</label>
    <select id="multi-select" multiple>
      <option value="#3">#3</option>
      <option value="#4">#4</option>
    </select>
  </div>

  <div class="input">
    <label for="checkbox">{{t "form.checkbox"}}</label>
    <input id="checkbox" type="checkbox">
  </div>

  <div class="input">
    <label for="interpolated">{{t "form.interpolated" name="form"}}</label>
    <input id="interpolated" type="checkbox">
  </div>

  <div class="input">
    <label for="yes">{{t "form.radio.yes"}}</label>
    <input id="yes" name="radio" type="radio" value="yes">

    <label for="no">{{t "form.radio.no"}}</label>
    <input id="no" name="radio" type="radio" value="no">
  </div>

  <button>{{t "form.button"}}</button>

  <a href="#" {{action "submit"}}>{{t "form.anchor"}}</a>

  <input type="submit" value={{t "form.submit"}}>
</form>

{{#if nestedSubmitted}}
  <span id="nested-submitted"></span>
{{/if}}

<form {{action "nestedSubmit" on="submit"}}>
  <label>
    {{t "nested.text"}}

    <input id="nested-text" type="text">
  </label>

  <label>
    {{t "nested.textarea"}}

    <textarea id="nested-textarea"></textarea>
  </label>

  <label>
    {{t "nested.select"}}

    <select id="nested-select">
      <option value="#1">#1</option>
      <option value="#2">#2</option>
    </select>
  </label>

  <label>
    {{t "nested.multi-select"}}

    <select id="nested-multi-select" multiple>
      <option value="#3">#3</option>
      <option value="#4">#4</option>
    </select>
  </label>

  <label>
    {{t "nested.checkbox"}}

    <input id="nested-checkbox" type="checkbox">
  </label>

  <label>
    {{t "nested.interpolated" name="nested"}}

    <input id="nested-interpolated" type="checkbox">
  </label>

  <div class="input">
    <label for="nested-yes">
      {{t "nested.radio.yes"}}

      <input id="nested-yes" name="nested-radio" type="radio" value="yes">
    </label>

    <label for="nested-no">
      {{t "nested.radio.no"}}

      <input id="nested-no" name="nested-radio" type="radio" value="no">
    </label>
  </div>

  <button>{{t "nested.button"}}</button>

  <input type="submit" value={{t "nested.submit"}}>
</form>
